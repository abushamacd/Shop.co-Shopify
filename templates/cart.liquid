<div class="">
  <script async src="{{ 'cart.js' | asset_url }}"></script>

  <div class="container">
    <div class="border-t border-gray-200 pt-6 pb-20">
      <div class="flex items-center mb-8">
        <a class="text-gray-400" href="{{shop.url}}">Home</a>
        <svg class="mx-2" width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1.53073 0.469372L6.53073 5.46937C6.60065 5.53905 6.65613 5.62184 6.69399 5.71301C6.73184 5.80417 6.75133 5.90191 6.75133 6.00062C6.75133 6.09933 6.73184 6.19707 6.69399 6.28824C6.65613 6.3794 6.60065 6.46219 6.53073 6.53187L1.53073 11.5319C1.38984 11.6728 1.19874 11.7519 0.999484 11.7519C0.800227 11.7519 0.609131 11.6728 0.468235 11.5319C0.327338 11.391 0.248184 11.1999 0.248184 11.0006C0.248184 10.8014 0.327338 10.6103 0.468235 10.4694L4.93761 6L0.46761 1.53062C0.326714 1.38973 0.247559 1.19863 0.247559 0.999372C0.247559 0.800115 0.326714 0.609018 0.46761 0.468122C0.608506 0.327227 0.799603 0.24807 0.99886 0.24807C1.19812 0.24807 1.38921 0.327227 1.53011 0.468122L1.53073 0.469372Z" fill="black" fill-opacity="0.6"/>
        </svg>
        <span class="">Cart</span>
      </div>

      <h1 class="section_title mb-6">Your Cart</h1>

      {%- if cart.item_count == 0 -%}
        <div class="empty_cart_UI">
          <div class=" flex flex-col justify-center items-center gap-2">
            <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="50" cy="50" r="45" stroke="#D1D5DB" stroke-width="10"/>
              <path d="M30 50L45 65L70 35" stroke="#4B5563" stroke-width="10" stroke-linecap="round"/>
            </svg>
            <div class="text-gray-500 text-lg inline-block">Your cart is empty</div>
          </div>
        </div>
      {%- else -%}
        <div class="cart_UI">
          <div class="flex justify-between gap-5.5 mb-20">
            <div class="w-7/12 border border-gray-200 rounded-2xl">
              <div class="cart_items"></div>
            </div>

            <div class="w-5/12 border h-90 border-gray-200 rounded-2xl">
              <div class="p-4">
                <p class="font-semibold py-2 text-2xl">Order Summary</p>
                <div class="flex justify-between border-b border-gray-200 ">
                  <div class="py-2">
                    <p class="font-thin text-lg text-gray-400 mb-2">Subtotal</p>
                    <p class="font-thin text-lg text-gray-400 mb-2">Discount (-20%)</p>
                  </div>
                  <div class="py-2 justify-items-end">
                    <p class="font-bold mb-2">{{ cart.items_subtotal_price | money }}</p>
                    <p class="font-bold mb-2 py-1 text-[#FF3333]">{{ cart.total_discount | money }}</p>
                  </div>
                </div>

                <div class="flex justify-between">
                  <p class="text-lg">Total</p>
                  <p class="font-bold">{{ cart.total_price | money }}</p>
                </div>
                <div class="flex justify-between py-3">
                  <div class="w-8/12">
                    <form class="flex  items-center bg-gray-100 rounded-full px-4" action="">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M23.0766 12.4857L13.7653 3.17444C13.5917 2.9997 13.3851 2.86115 13.1576 2.76685C12.93 2.67254 12.686 2.62435 12.4397 2.62507H3.75001C3.45164 2.62507 3.16549 2.7436 2.95451 2.95457C2.74353 3.16555 2.62501 3.4517 2.62501 3.75007V12.4398C2.62429 12.6861 2.67248 12.9301 2.76679 13.1576C2.86109 13.3852 2.99963 13.5918 3.17438 13.7654L12.4856 23.0766C12.8372 23.4281 13.3141 23.6256 13.8113 23.6256C14.3084 23.6256 14.7853 23.4281 15.1369 23.0766L23.0766 15.1369C23.4281 14.7853 23.6255 14.3085 23.6255 13.8113C23.6255 13.3141 23.4281 12.8373 23.0766 12.4857ZM13.8113 21.2204L4.87501 12.2813V4.87507H12.2813L21.2175 13.8113L13.8113 21.2204ZM9.37501 7.87507C9.37501 8.17174 9.28703 8.46175 9.12221 8.70842C8.95739 8.9551 8.72312 9.14736 8.44903 9.26089C8.17494 9.37442 7.87334 9.40412 7.58237 9.34625C7.2914 9.28837 7.02413 9.14551 6.81435 8.93573C6.60457 8.72595 6.46171 8.45868 6.40383 8.1677C6.34595 7.87673 6.37566 7.57513 6.48919 7.30104C6.60272 7.02695 6.79498 6.79269 7.04165 6.62786C7.28833 6.46304 7.57834 6.37507 7.87501 6.37507C8.27283 6.37507 8.65436 6.5331 8.93567 6.81441C9.21697 7.09571 9.37501 7.47724 9.37501 7.87507Z" fill="black" fill-opacity="0.4"></path>
                      </svg>

                      <input
                        class="px-4 py-2 w-full focus:outline-none font-thin"
                        type="search"
                        placeholder="Add promo code"
                      >
                    </form>
                  </div>
                  <div class="w-4/12 pl-10 right-0">
                    <button class="px-10 py-2 bg-black text-white rounded-full">Apply</button>
                  </div>
                </div>
                <div class="mt-2 mx-1">
                  <a href="" class="flex justify-center items-center bg-black text-white rounded-full py-1 px-4">
                    <div class="px-3 py-2 bg-black text-white rounded-full">Go to Checkout</div>
                    <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M14.7959 4.4541L21.5459 11.2041C21.6508 11.3086 21.734 11.4328 21.7908 11.5696C21.8476 11.7063 21.8768 11.8529 21.8768 12.001C21.8768 12.149 21.8476 12.2957 21.7908 12.4324C21.734 12.5691 21.6508 12.6933 21.5459 12.7979L14.7959 19.5479C14.5846 19.7592 14.2979 19.8779 13.9991 19.8779C13.7002 19.8779 13.4135 19.7592 13.2022 19.5479C12.9908 19.3365 12.8721 19.0499 12.8721 18.751C12.8721 18.4521 12.9908 18.1654 13.2022 17.9541L18.0313 13.125L4.25 13.125C3.95163 13.125 3.66548 13.0065 3.4545 12.7955C3.24353 12.5846 3.125 12.2984 3.125 12C3.125 11.7017 3.24353 11.4155 3.45451 11.2045C3.66548 10.9936 3.95163 10.875 4.25 10.875L18.0313 10.875L13.2013 6.04598C12.9899 5.83463 12.8712 5.54799 12.8712 5.2491C12.8712 4.95022 12.9899 4.66357 13.2013 4.45223C13.4126 4.24088 13.6992 4.12215 13.9981 4.12215C14.297 4.12215 14.5837 4.24088 14.795 4.45223L14.7959 4.4541Z" fill="white"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
