<script>
  jQuery(function ($) {
    function updateQuantity(change) {
      let $qtyDisplay = $('.quantity');
      let quantity = parseInt($qtyDisplay.text()) + change;
      if (quantity < 1) return;
      $qtyDisplay.text(quantity);
      $("input[name='quantity']").val(quantity);
    }

    $('.minus').click(() => updateQuantity(-1));
    $('.plus').click(() => updateQuantity(1));
  });
</script>
<div class="flex justify-center items-center px-5 border border-gray-200 rounded-full bg-[#F0F0F0]">
  <button type="button" class="minus">-</button>
  <span
    style="width: 40px;"
    class="quantity text-center"
    >1</span
  >
  <button type="button" class="plus">+</button>
</div>
<input
  name="quantity"
  type="hidden"
  min="1"
  value="0"
  name=""
  id=""
  class="w-4/12 bg-gray-100 text-center rounded-full mr-2"
>
